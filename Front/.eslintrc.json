{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "jest": true
    },
    "rules": {
      "semi": "error",
      "max-params": ["error", 4],
      "eqeqeq" : "error",
      "no-invalid-this": "error",
      "no-loop-func": "error",
      "no-new-wrappers": "error"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
          "version": "16.0"
        }
    }
  }